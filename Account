import java.util.*;

package Account;

import java.util.*;

class Account {
    int ID;
    int type;
    String name;
    double balance;
    double limit;
    double amount;
    
    boolean withdraw(double balance) {
        this.balance = balance;
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter an amount: ");
        double amount = sc.nextDouble();
        if(this.balance < amount){
            return false;
        } else {
            this.balance = this.balance - amount;
            return true;
        }
    }
    
    boolean deposit(double balance) {
        this.balance = balance;
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter an amount: ");
        double amount = sc.nextDouble();
        if(this.limit < this.balance + amount){
            return false;
        } else {
            this.balance = this.balance + amount;
            return true;
        }
    }
    
    void showBalance(double balance){
        System.out.println("Balance: " + this.balance);
    }
    
    void showType(int type){
        System.out.println("Type: " + this.type);
    }
    
    double update(double balance, double multiplier){
        this.balance = balance * (0.1 * multiplier);
        System.out.println("Balance updated! The new balance is " + this.balance);
        return balance;
    }
    
}

class Worker {
String name;
String cpf;
double balance;

}

class Manager extends Worker{
int password;
int numberWorkers;

public boolean Authentic(int password) {
	if (this.password == password) {
		System.out.println("Access allowed.");
		return true;
	} else {
		System.out.println("Access denied.");
		return false;
	}
}
}

class CurrentAccount extends Account{
double multiplier; 
}

class DepositAccount extends Account{
double multiplier;
}

public class Main
{
	public static void main(String[] args) {
		/*
		Account myAccount;
		myAccount = new Account();
		myAccount.name = "Ian";
		myAccount.type = 135;
		myAccount.balance = 1000.0;
		myAccount.limit = 1000000.0;
		
		myAccount.withdraw(myAccount.balance);
        myAccount.showBalance(myAccount.balance);
		myAccount.deposit(myAccount.balance);
		myAccount.showBalance(myAccount.balance);
		myAccount.showType(myAccount.type);
		*/
		
		CurrentAccount account1;
		account1 = new CurrentAccount();
		account1.name = "Current";
		account1.type = 123;
		account1.balance = 1000.0;
		account1.limit = 10000.0;
		account1.multiplier = 2.0;
		account1.update(account1.balance, account1.multiplier);
		
		DepositAccount account2;
		account2 = new DepositAccount();
		account2.name = "Deposit";
		account2.type = 321;
		account2.balance = 1000.0;
		account2.limit = 10000.0;
		account2.multiplier = 3.0;
		account2.update(account2.balance, account2.multiplier);
	}
}
