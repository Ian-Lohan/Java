package Account;

import java.util.*;

class Account {
    private int ID;
    private int type;
    private String name;
    private double balance;
    private double limit;
    private double amount;
    public Client titular = new Client();
    
    public boolean withdraw(double balance) {
        this.balance = balance;
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter an amount: ");
        double amount = sc.nextDouble();
        if(this.balance < amount){
            return false;
        } else {
            this.balance = this.balance - amount;
            return true;
        }
    }
    
    public boolean deposit(double balance) {
        this.balance = balance;
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter an amount: ");
        double amount = sc.nextDouble();
        if(this.limit < this.balance + amount){
            return false;
        } else {
            this.balance = this.balance + amount;
            return true;
        }
    }
    
    public void showBalance(double balance){
        System.out.println("Balance: " + this.balance);
    }
    
    public void showType(int type){
        System.out.println("Type: " + this.type);
    }
    
    public double update(double balance, double multiplier){
        this.balance = balance + (balance * 0.1 * multiplier);
        System.out.println("Balance updated! The new balance is " + this.balance);
        return balance;
    }
    
    public double getID() {
        return this.ID;
    }
    
    public void setID(int ID) {
        this.ID = ID;
    }
    
    public double getType() {
        return this.type;
    }
    
    public void setType(int type) {
        this.type = type;
    }
    
    public String getName() {
        return this.name;
    }
    
    public void setName(String name) {
        this.name = name;
    }
    
    public double getBalance() {
        return this.balance;
    }
    
    public void setBalance(double balance) {
        this.balance = balance;
    }
    
    public double getLimit() {
        return this.limit;
    }
    
    public void setLimit(double limit) {
        this.limit = limit;
    }
    
    public double getAmount() {
        return this.amount;
    }
    
    public void setID(double amount) {
        this.amount = amount;
    }
}

package Account; 

class Worker {
    String name;
    String cpf;
    double balance;
}

package Account;

class Manager extends Worker{
    int password;
    int numberWorkers;

    public boolean Authentic(int password) {
    	if (this.password == password) {
    		System.out.println("Access allowed.");
    		return true;
    	} else {
    		System.out.println("Access denied.");
    		return false;
    	}
    }
}

package Account;

class CurrentAccount extends Account{
    double multiplier; 
}

package Account;

class DepositAccount extends Account{
	double multiplier;
}

